        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "ID of the contact",
            "example": "67695006626ceb61f08af4a7"
          },
          "name": {
            "type": "string",
            "description": "Name of the contact",
            "example": "John Doe"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Phone number of the contact",
            "example": "234-567-8900"
          },
          "email": {
            "type": "string",
            "description": "Email address of the contact",
            "example": "johndoe@example.com",
            "nullable": true
          },
          "isFavourite": {
            "type": "boolean",
            "description": "Indicates if the contact is marked as favorite",
            "example": false
          },
          "contactType": {
            "type": "string",
            "description": "Type of contact",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "personal"
          },
          "userId": {
            "type": "string",
            "description": "ID of the user associated with the contact",
            "example": "675ebf671269520b8ed9aaa2"
          },
          "photo": {
            "type": "string",
            "format": "binary",
            "description": "File upload for the contact's photo"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the contact was created",
            "example": "2023-01-01T00:00:00Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the contact was last updated",
            "example": "2023-01-01T00:00:00Z"
          }
        }
      }
